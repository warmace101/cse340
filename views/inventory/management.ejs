<%- include("../partials/header") %>
<main>
  <h1>Inventory Management</h1>
  
  <% if (flash && flash.length > 0) { %>
    <div class="flash-message"><%= flash %></div>
  <% } %>

  <ul class="management-links">
    <li>
      <a href="/inv/add-classification">Add New Classification</a>
    </li>
    <li>
      <a href="/inv/add-inventory">Add New Inventory Item</a>
    </li>
  </ul>

  <form action="/inv/export-csv/<%= classification_id || 1 %>" method="get" style="display:inline;">
    <button type="submit">Export Inventory as CSV</button>
  </form>
</main>
<%- include("../partials/footer") %>